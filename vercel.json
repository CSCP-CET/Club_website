{
  "version": 2,
  "installCommand": "pnpm install --frozen-lockfile",
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "backend/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/server.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/backend/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}